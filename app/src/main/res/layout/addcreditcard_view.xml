<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/screenback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Account Name"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/eNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Nickname"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etNameonCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Name on Card"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/userlastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Account Number"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight=".5">

                <FrameLayout
                    android:id="@+id/expfram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:id="@+id/etExpiryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center_vertical"
                            android:hint="Expiry"
                            android:inputType="none"
                            android:letterSpacing="0.02"
                            android:maxLines="1"
                            android:text="MM/YYYY"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp"
                            android:focusable="false"
                            android:drawableRight="@drawable/down_arrow_trai_ic"></EditText>
                    </android.support.design.widget.TextInputLayout>



                </FrameLayout>
                <TextView
                    android:layout_below="@+id/expfram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:paddingLeft="3dp"
                    android:text="Required"
                    android:textColor="#99FFFFFF"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight=".5">

                <FrameLayout
                    android:id="@+id/cvvlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:id="@+id/etCVV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center_vertical"
                            android:hint="CVV"
                            android:inputType="none"
                            android:letterSpacing="0.02"
                            android:maxLines="1"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp"></EditText>
                    </android.support.design.widget.TextInputLayout>


                </FrameLayout>

                <TextView
                    android:layout_below="@+id/cvvlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:paddingLeft="3dp"
                    android:text="Required"
                    android:textColor="#99FFFFFF"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etBillingAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:hint="Billing Address"
                    android:inputType="none"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:text="Billing address"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:drawableRight="@drawable/down_arrow_trai_ic"></EditText>
            </android.support.design.widget.TextInputLayout>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:paddingLeft="3dp"
                android:text="Primary"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchPrimaryAC"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchStyle"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>