<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/parentlay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/screenback"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_alph"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:text="A"
            android:textSize="26dp"
            android:textColor="?attr/themeprimarycolor"
            android:layout_centerVertical="true"
            android:gravity="center"/>

        <TextView
            android:layout_toRightOf="@+id/txt_alph"
            android:layout_toLeftOf="@+id/checkCmp"
            android:id="@+id/txt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:text="AAlabama,	AL"
            android:textSize="15dp"
            android:textColor="?attr/themeprimarycolor"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />

        <CheckBox
            android:id="@+id/checkCmp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="?attr/inboxcheckIC"/>

    </RelativeLayout>
    <View
        android:id="@+id/viewchange"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:visibility="gone"/>



</LinearLayout>