<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/folder_light_vector"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtxfolderName"
            android:layout_toRightOf="@+id/imgInfo"
            android:layout_toLeftOf="@+id/txtContentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/themeprimarycolor"
            android:letterSpacing="0.01"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtContentCount"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/themeprimarycolor"
            android:letterSpacing="0.01"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</RelativeLayout>