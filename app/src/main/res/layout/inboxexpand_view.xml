<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/cardexpandbg">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4DFFFFFF" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Statement"
        android:textSize="12sp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="?attr/secandarytxt"
        android:letterSpacing="0.01"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">

        <TextView
            android:id="@+id/txtBankName"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Citibank"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="?attr/cardexpandfirsttxt"
            android:letterSpacing="0.01"/>


        <TextView
            android:layout_below="@+id/txtBankName"
            android:id="@+id/txtStatementSpand"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue Monthly Statment"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/cardexpandsecondtxt"
            android:letterSpacing="0.01"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_below="@+id/txtStatementSpand"
            android:id="@+id/txtBankWebLink"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/cardexpandsecondtxt"
            android:letterSpacing="0.01"
            android:autoLink="web"/>


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/due1lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtdue"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Due"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans"
                android:textColor="?attr/cardexpandsecondtxt"
                android:letterSpacing="0.01"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_below="@+id/txtdue"
                android:id="@+id/txtTotalDue"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="?attr/cardexpandfirsttxt"
                android:letterSpacing="0.01"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/due1lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtdate"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DUE DATE"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans"
                android:textColor="?attr/cardexpandsecondtxt"
                android:letterSpacing="0.01"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_below="@+id/txtdate"
                android:id="@+id/txtexp_DueDate"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="?attr/cardexpandsduedatetxt"
                android:letterSpacing="0.01"/>

        </RelativeLayout>


    </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/minlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtmin"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Due"
            android:textSize="10sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/cardexpandsecondtxt"
            android:letterSpacing="0.01"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_below="@+id/txtmin"
            android:id="@+id/txtMinimumDue"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="?attr/cardexpandfirsttxt"
            android:letterSpacing="0.01"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/minlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/txtdays"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAYS PAST"
                    android:textSize="10sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="?attr/cardexpandsecondtxt"
                    android:letterSpacing="0.01"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_below="@+id/txtdays"
                    android:id="@+id/txtpastdays"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="?attr/cardexpandfirsttxt"
                    android:letterSpacing="0.01"/>

            </RelativeLayout>


        </RelativeLayout>


        <ImageView
            android:id="@+id/imgArrowDue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_arrow_right_vector" />

    </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4DFFFFFF"
        android:layout_marginTop="21dp"/>



    <RelativeLayout
        android:layout_below="@+id/minlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPreStatPay"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Statements and Payments (1)"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="?attr/cardexpandsecondtxt"
            android:letterSpacing="0.01"/>

        <TextView
            android:layout_below="@+id/txtPreStatPay"
            android:id="@+id/txtPreStatPayDate"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apr. 26, 2015 - Apr. 30, 2016"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="?attr/cardexpandfirsttxt"
            android:letterSpacing="0.01"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:id="@+id/paybanklay"
            android:layout_below="@+id/txtPreStatPayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtCurrentBalance"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="?attr/cardexpandfirsttxt"
                android:letterSpacing="0.01" />



            <TextView
                android:id="@+id/txtFundingBank"
                android:layout_toRightOf="@+id/txtCurrentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:fontFamily="@font/open_sans"
                android:textColor="?attr/cardexpandsecondtxt"
                android:letterSpacing="0.01"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/txtScheduleDate"
            android:layout_below="@+id/paybanklay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled on May 17"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans"
            android:textColor="?attr/cardexpandsecondtxt"
            android:letterSpacing="0.01"
            android:layout_marginTop="12dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgArrowStatement"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/expand_arrow_right_vector" />

    </RelativeLayout>


</LinearLayout>