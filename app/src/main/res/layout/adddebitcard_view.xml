<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/screenback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etAccountNameDebit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Account Name"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/eNicknameDebit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Nickname"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
        <FrameLayout
            android:id="@+id/frameAlertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/userAltName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/etAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:hint="Account Type"
                    android:inputType="none"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:text="Checking"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:focusable="false"
                    android:drawableRight="@drawable/down_arrow_trai_ic"></EditText>
            </android.support.design.widget.TextInputLayout>




        </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:paddingLeft="3dp"
                android:text="Required"
                android:textColor="#99FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etAccountNumberDebit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Account Number"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/etRoutingNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:hint="Routing Number"
                android:inputType="text"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp"></EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:paddingLeft="3dp"
            android:text="Required"
            android:textColor="#99FFFFFF"
            android:textSize="10sp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:paddingLeft="3dp"
                android:text="Primary"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchPrimaryAC"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchStyle"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>