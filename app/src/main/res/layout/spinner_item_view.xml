<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prent_lay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/screenback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

    <TextView
        android:id="@+id/txtThemeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JMD Group"
        android:textColor="?attr/themeprimarycolor"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans"
        android:layout_centerVertical="true"/>

    <ImageView
      android:id="@+id/imgChecked"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ricght_check_white_vect"
      android:gravity="center_vertical"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/baseline"
        android:alpha="0.2"/>



</LinearLayout>