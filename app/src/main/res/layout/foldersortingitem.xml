<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/screenback"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:elevation="50dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/folder_light_vector"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtxfolderName"
            android:layout_toRightOf="@+id/imgInfo"
            android:layout_toLeftOf="@+id/imgDrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.01"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_toLeftOf="@+id/img_more"
            android:id="@+id/imgDrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/drag_drop_vector"
            android:layout_marginRight="29dp"/>

        <ImageView
            android:id="@+id/img_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_vector"
            android:layout_centerVertical="true" />



    </RelativeLayout>

</RelativeLayout>