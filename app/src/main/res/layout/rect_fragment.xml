<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/screenback">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/headerlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/primaryNavigationBGColor"
        android:padding="16dp"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Navigation"
            android:textColor="?attr/primaryTextColor"
            android:textSize="19sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/headerlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/contentBG"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
           >


            <RelativeLayout
                android:id="@+id/newLay"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ImageView
                    android:id="@+id/imgNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/news_vector"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtxfolderName"
                    android:layout_toRightOf="@+id/imgNews"
                    android:layout_toLeftOf="@+id/txtNewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="?attr/themeprimarycolor"
                    android:letterSpacing="0.01"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtNewsCount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="?attr/themeprimarycolor"
                    android:letterSpacing="0.01"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/newLay"
                android:id="@+id/paymentsLay"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ImageView
                    android:id="@+id/imgPayments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/payments_vector"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtPayments"
                    android:layout_toRightOf="@+id/imgPayments"
                    android:layout_toLeftOf="@+id/txtPaymentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="?attr/themeprimarycolor"
                    android:letterSpacing="0.01"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtPaymentsCount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="?attr/themeprimarycolor"
                    android:letterSpacing="0.01"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/paymentsLay"
                android:id="@+id/SubscriptionsLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                 <RelativeLayout
                     android:layout_weight=".5"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/subsLay1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:id="@+id/imgSubs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/subscriptions_vector"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_toRightOf="@+id/imgSubs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscriptions"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="?attr/themeprimarycolor"
                        android:letterSpacing="0.01"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


                     <TextView
                         android:id="@+id/txteExisting"
                         android:layout_below="@+id/subsLay1"
                         android:layout_width="match_parent"
                         android:layout_height="56dp"
                         android:text="Existing"
                         android:textSize="15sp"
                         android:fontFamily="@font/open_sans"
                         android:textColor="?attr/themeprimarycolor"
                         android:letterSpacing="0.01"
                         android:gravity="center_vertical|right"
                         android:paddingRight="10dp"/>

                     <TextView
                         android:layout_below="@+id/txteExisting"
                         android:layout_width="match_parent"
                         android:layout_height="56dp"
                         android:text="Invitation"
                         android:textSize="15sp"
                         android:fontFamily="@font/open_sans"
                         android:textColor="?attr/themeprimarycolor"
                         android:letterSpacing="0.01"
                         android:gravity="center_vertical|right" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/txtAddNew"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Add New"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="?attr/themeprimarycolor"
                        android:letterSpacing="0.01"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_below="@+id/txtAddNew"
                        android:id="@+id/txtExistingCount"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="21"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="?attr/themeprimarycolor"
                        android:letterSpacing="0.01"
                        android:gravity="center_vertical|right"/>

                    <TextView
                        android:layout_below="@+id/txtExistingCount"
                        android:id="@+id/txtInvitationCount"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="50"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="?attr/themeprimarycolor"
                        android:letterSpacing="0.01"
                        android:gravity="center_vertical|right"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>