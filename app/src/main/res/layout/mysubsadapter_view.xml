<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/cardlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imgDocLogolay"
                    android:layout_alignParentLeft="true"
                    android:layout_width="90dp"
                    android:layout_height="112dp"
                    android:gravity="bottom">
                    <ImageView
                        android:id="@+id/imgDocLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/defaultimage_vector"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_toRightOf="@+id/imgDocLogolay"
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="112dp"
                    android:background="#E1E6ED"/>

                <RelativeLayout
                    android:layout_toRightOf="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                   >

                <RelativeLayout
                    android:layout_toLeftOf="@+id/arraw_icon"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdsDSdsdsd"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="#041C2C"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end"/>


                    <TextView
                        android:layout_below="@+id/txtTitle"
                        android:id="@+id/txtStatement"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdsdsddsd"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="#5F7296"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="1dp"/>


                    <TextView
                        android:layout_below="@+id/txtStatement"
                        android:id="@+id/txtBankAc"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdsdsddsd"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="#5F7296"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="1dp"/>




                </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/arraw_icon"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right_vector"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

            </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E6ED"/>


            <RelativeLayout
                android:id="@+id/displayextraLay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/blankview"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_toRightOf="@+id/blankview"
                    android:id="@+id/paperOnOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paperlessoff_vector"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_toRightOf="@+id/paperOnOff"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_paperonoff"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paperless OFF"
                    android:textSize="10sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#5F7296"
                    android:letterSpacing="0.01"
                    android:layout_marginLeft="10dp"/>



                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchShowsmartfolder"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchStyle"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>