<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:visibility="visible"
    android:padding="16dp"
    android:elevation="10dp">


    <ImageView
        android:id="@+id/imgSearcBack"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow_vector"
        android:layout_centerVertical="true"/>


    <EditText
        android:id="@+id/editSearch"
        android:layout_toLeftOf="@+id/imgRemoveText"
        android:layout_toRightOf="@+id/imgSearcBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:background="#00000000"
        android:hint="Search"
        android:textSize="19sp"
        android:textColor="#041C2C"
        android:textColorHint="#8A5F7296"
        android:fontFamily="@font/open_sans_semibold"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch"/>

    <ImageView
        android:id="@+id/imgRemoveText"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cross_vector"
        android:layout_centerVertical="true"/>
</RelativeLayout>